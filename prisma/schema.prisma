generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================================================
// ENUMS
// =============================================================================

enum ProfileType {
  INDIVIDUAL
  BUSINESS
}

enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum DocumentType {
  ID_CARD
  PASSPORT
  COMPANY_REGISTRATION
  TAX_CERTIFICATE
  PROFILE_PHOTO
  PROOF_OF_ADDRESS
  OTHER
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ProfileRole {
  TENANT      // Locataire
  LANDLORD    // Bailleur
  AGENT       // Commissionnaire/Agent immobilier
}

// =============================================================================
// AUTH MODELS
// =============================================================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified Boolean   @default(false)
  name          String?   // Champ conservé pour compatibilité avec better-auth
  firstName     String?   // Prénom de l'utilisateur
  lastName      String?   // Nom de famille de l'utilisateur
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions           Session[]
  accounts           Account[]
  verifications      Verification[]
  profiles           Profile[]
  activeProfileId    String?

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  idToken               String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?   @db.Text
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
  @@map("accounts")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String?

  @@index([identifier])
  @@map("verifications")
}

// =============================================================================
// PROFILE MODELS
// =============================================================================

model Profile {
  id          String      @id @default(cuid())
  userId      String
  profileType ProfileType
  phoneNumber String?
  country     String?
  city        String?
  address     String?
  isCertified Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user               User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  individualProfile  IndividualProfile?
  businessProfile    BusinessProfile?
  documents          ProfileDocument[]
  profileVerifications ProfileVerification[]
  profileRoles       ProfileRoleAssignment[]

  @@index([userId])
  @@map("profiles")
}

model IndividualProfile {
  id               String   @id
  fullName         String?
  dateOfBirth      DateTime?
  gender           Gender?
  nationalIdNumber String?  @unique

  profile Profile @relation(fields: [id], references: [id], onDelete: Cascade)

  @@map("individual_profiles")
}

model BusinessProfile {
  id                      String  @id
  businessName            String?
  registrationNumber      String? @unique
  taxId                   String? @unique
  legalRepresentativeName String?

  profile Profile @relation(fields: [id], references: [id], onDelete: Cascade)

  @@map("business_profiles")
}

model ProfileDocument {
  id         String       @id @default(cuid())
  profileId  String
  fileType   DocumentType
  fileName   String?
  url        String
  verified   Boolean      @default(false)
  uploadedAt DateTime     @default(now())

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@map("profile_documents")
}

model ProfileVerification {
  id         String             @id @default(cuid())
  profileId  String
  status     VerificationStatus @default(PENDING)
  reviewedBy String?
  reviewedAt DateTime?
  notes      String?            @db.Text
  createdAt  DateTime           @default(now())

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@map("profile_verifications")
}

model ProfileRoleAssignment {
  id        String      @id @default(cuid())
  profileId String
  role      ProfileRole
  isActive  Boolean     @default(true)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([profileId, role])
  @@index([profileId])
  @@map("profile_role_assignments")
}
